<div class="add-game-btn">
<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">Add Task</button>
{{!-- <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBackdrop" aria-controls="offcanvasWithBackdrop">Enable backdrop (default)</button> --}}
<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Search Tasks</button>


<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Colored with scrolling</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>

  <div class="offcanvas-body">

    <div class="">
      <h3>Add tasks for {{ title }} </h3>
        <form class="form task-form" id="task-form">
      
          <div class="form-group">
            <label for="task">Task Title:</label>
            <input class="form-input" type="text" id="taskDesc" name="task_desc" />
          
            <p>Task Description</p>
            <textarea id='taskContent' name="task_content" cols="30" rows="10"></textarea>
            <button type="submit" class="btn btn-primary" id="taskSubmit">Add</button>
          </div>
        </form>
    </div>
  </div>

</div>


<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">

  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Backdroped with scrolling</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  
  <div class="offcanvas-body">
    <h3>Search Tasks</h3>
    <div class="input-group flex-nowrap">
  <span class="input-group-text" id="addon-wrapping"><i class="fas fa-search"></i></span>
  <input type="text" class="form-control" placeholder="Search Games" aria-label="Username" aria-describedby="addon-wrapping">
</div>
  </div>
</div>

</div>










<div class="row mt-4">
  <div class="col-md-6">
    <h1>Game: {{title}}</h1>
    <br>
    <h3>Add Task</h3>

  </div>

  {{#if tasks.length}}
  <div class="col-md-6 task-list">
    <h3>Current Tasks:</h3>

    {{#each tasks as |task|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h3>{{task.title}}</a></h3>
        <p>{{task.description}}</p>

      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger task-delete" data-id="{{task.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/add-task.js"></script>
<script src="/js/delete-task.js"></script>